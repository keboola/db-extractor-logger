{
    "name": "keboola/db-extractor-logger",
    "description": "Print info from db-extractor",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ondra Jodas",
            "email": "ondra.jodas@gmail.com"
        }
    ],
    "require": {
        "monolog/monolog": "^1.24",
        "keboola/csv": "^1.1"
    },
    "require-dev": {
        "keboola/coding-standard": "^8.0",
        "phpunit/phpunit": "^8.2",
        "phpstan/phpstan": "^0.11.8"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\DbExtractor\\": "src/"
        }
    },
    "scripts": {
        "tests": "./vendor/bin/phpunit",
        "phpstan": "phpstan analyse --no-progress --level=max ./src ./tests",
        "phpcs": "phpcs -n -s --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "build": [
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer install",
            "@composer validate --no-check-all --strict",
            "@tests"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
